# ============================================================================
# SUPERGREEN ENERGY - PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your production values
# NEVER commit .env to version control!

# Server configuration
PORT=3000
NODE_ENV=production

# CORS - comma-separated list of allowed origins
APP_ORIGIN=https://your-domain.com,https://www.your-domain.com

# ============================================================================
# ETHEREUM CONFIGURATION (REQUIRED)
# ============================================================================

# Mainnet RPC URL - Use Alchemy or Infura for production
# Get an API key from https://www.alchemy.com or https://infura.io
ETH_RPC_HTTPS=https://eth-mainnet.g.alchemy.com/v2/YOUR_PRODUCTION_KEY

# Relayer wallet private key (CRITICAL - KEEP SECRET!)
# This wallet MUST:
# 1. Own the SGEID contract (be the deployer or have ownership transferred)
# 2. Have sufficient ETH for gas (~0.1-0.5 ETH recommended)
# Generate new: node -e "console.log(require('ethers').Wallet.createRandom().privateKey)"
RELAYER_PRIVATE_KEY=0x_YOUR_RELAYER_PRIVATE_KEY_HERE

# ============================================================================
# CONTRACT ADDRESSES (REQUIRED)
# ============================================================================

# Your deployed SGEID NFT contract address
SGEID_ADDRESS=0x_YOUR_DEPLOYED_SGEID_CONTRACT

# SGE Token contract (mainnet)
SGE_TOKEN=0x40489719E489782959486A04B765E1E93E5B221a

# SGE Claim contract (mainnet)
SGE_CLAIM=0x4BFeF695a5f85a65E1Aa6015439f317494477D09

# Stablecoins (mainnet - DO NOT CHANGE)
USDC=0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48
USDT=0xdAC17F958D2ee523a2206206994597C13D831ec7

# ============================================================================
# FEATURE CONFIGURATION
# ============================================================================

# Registration fee in USD
FEE_USD=100

# Require KYC before registration
KYC_REQUIRED=false

# Require Commerce payment before registration
COMMERCE_REQUIRED=true

# Allow soft KYC (email verification)
ALLOW_SOFT_KYC=true

# ============================================================================
# ADMIN CONFIGURATION
# ============================================================================

# API key for admin endpoints (/api/admin/*)
# Generate a strong random key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_API_KEY=your-secure-admin-api-key

# ============================================================================
# COINBASE COMMERCE (REQUIRED IF COMMERCE_REQUIRED=true)
# ============================================================================

# Get from Coinbase Commerce Dashboard > Settings > API keys
COINBASE_COMMERCE_API_KEY=your-coinbase-commerce-api-key

# Get from Coinbase Commerce Dashboard > Settings > Notifications > Webhook endpoints
# Create a webhook pointing to: https://your-api-domain.com/api/commerce/webhook
COINBASE_COMMERCE_WEBHOOK_SHARED_SECRET=whsec_your_webhook_shared_secret
